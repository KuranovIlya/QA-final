{% extends 'auth.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}
    <div class="container">
        {{ form_start(registrationForm) }}

        {% set formErrors = registrationForm.vars.errors.form.getErrors(true) %}
        {% if formErrors|length %}
            <div class="alert">
                {% for error in formErrors %}
                    <div>
                        {{ error.message }}
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        <h1>Регистрация</h1>
        <p>Имя</p>
        {{ form_widget(registrationForm.fullname) }}
        <p>Почта</p>
            {{ form_widget(registrationForm.email) }}
        <p>Пароль</p>
            {{ form_widget(registrationForm.plainPassword.first) }}
        <p>Повторите пароль</p>
            {{ form_widget(registrationForm.plainPassword.second) }}
        <p>{{ form_widget(registrationForm.agreeTerms) }} Я согласен с правилами пользования сайта.</p>
        <div class="button-center">
            <button type="submit" id="link__auth" class="button auth">Зарегистрироваться</button>
        </div>
        <a class="link__text" href="/">Вернуться на главную</a>

        {{ form_end(registrationForm) }}
    </div>
{% endblock %}

